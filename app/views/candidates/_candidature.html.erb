<table>
    <% candidate.candidatures.each do |candidature| %>
        <tr>
            <td><%= candidature.sequencial_candidato %></td>
            <td><%= candidature.election_year %></td>
            <td><%= candidature.election_description %></td>
            <td><%= candidature.federative_unit_symbol %></td>
            <td><%= candidature.federative_unit_description %></td>
            <td><%= candidature.job_title %></td>
            <td><%= candidature.candidate_number %></td>
            <td><%= candidature.political_party_symbol %></td>
            <td><%= candidature.political_caption %></td>
            <td><%= candidature.desc_sit_tot_turno %></td>
            <td><%= link_to candidature.total_revenue, "#Receita-#{(candidature.id)}", :class => "btn", "data-toggle" => "modal" %></td>
            <td><%= link_to candidature.total_expenditure, "#Despesa-#{(candidature.id)}", :class => "btn", "data-toggle" => "modal" %></td>
            <td><%= link_to candidature.total_patrimony, "#Patrimonio-#{(candidature.id)}", :class => "btn", "data-toggle" => "modal" %></td>
            </tr>
</table>
                <!-- Modal Receita -->
    <div class="modal bs-example-modal-lg" id="Receita-<%= candidature.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">Detalhamento de receitas da candidature</h4>
          </div>
          <div class="modal-body">
            <table>
              <thead>
                <tr>
                  <th>Doador</th>
                  <th>Valor</th>
                  <th>Descrição</th>
                </tr>
              </thead>
              <% candidature.revenues.each do |revenue| %>
                <% if revenue.sequencial_candidato == candidature.sequencial_candidato %>
                  <tbody>
                    <tr>
                      <td><%= revenue.donator %></td>
                      <td><%= revenue.price %></td>
                      <td><%= revenue.description %></td>
                    </tr>
                  </tbody>
                <%end%>
              <%end%>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>   <!-- Modal Receita -->
    <!-- Modal Despesa -->
    <div class="modal bs-example-modal-lg" id="Despesa-<%= candidature.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">Detalhamento de Despesas da candidature</h4>
          </div>
          <div class="modal-body">
            <table>
              <thead>
                <tr>
                  <th>Fornecedor</th>
                  <th>Valor</th>
                  <th>Descrição</th>
                </tr>
              </thead>
              <% candidature.expenditures.each do |expenditure| %>
                <% if expenditure.sequencial_candidato == candidature.sequencial_candidato %>
                  <tbody>
                    <tr>
                      <td><%= expenditure.seller %></td>
                      <td><%= expenditure.price %></td>
                      <td><%= expenditure.description %></td>
                    </tr>
                  </tbody>
                <%end%>
              <%end%>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>   <!-- Modal Despesa -->
<!-- Modal Patrimonio -->
    <div class="modal bs-example-modal-lg" id="Patrimonio-<%= candidature.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">Detalhamento de Bens da candidature</h4>
          </div>
          <div class="modal-body">
            <table>
              <thead>
                <tr>
                  <th>Candidato</th>
                  <th>Valor do bem</th>
                  <th>Descrição do bem</th>
                </tr>
              </thead>
              <% candidature.patrimonies.each do |patrimony| %>
                <% if patrimony.sequencial_candidato == candidature.sequencial_candidato %>
                  <tbody>
                    <tr>
                      <td><%= patrimony.sequencial_candidato %></td>
                      <td><%= patrimony.price %></td>
                      <td><%= patrimony.description %></td>
                    </tr>
                  </tbody>
                <%end%>
              <%end%>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>   <!-- Modal Patrimonio -->
    <%end%>
