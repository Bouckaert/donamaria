/ ******************** NAVBAR ********************
.navbar-wrapper
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container
        / Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize.
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %h1.brand= link_to "DonaMaria", root_path, class: 'navbar-brand', data: { no_turbolink: true }
        / Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse.
        %nav.pull-right.nav-collapse.collapse
          %ul#menu-main.nav.landing
            %li
              = form_tag representatives_path, class: 'navbar-form', method: 'get' do
                .form-group
                  = text_field_tag :search, params[:search], placeholder: "Pesquisar Candidato", class: "form-control"
                  = button_tag(type: "submit", class: "btn btn-default", name: nil) do
                    %i.fa.fa-search.fa-lg
            %li
            %li
            %li
            %li
          %ul#user-log.nav.navbar-right
            %li.dropdown
              - if user_signed_in?
                = link_to current_user.email, edit_user_registration_path, data: { :toggle=>"dropdown" }, class: '"dropdown-toggle" navbar-link'
                .dropdown-menu
                  = link_to 'Editar', edit_user_registration_path, class: 'navbar-link'
                  %br/
                  = link_to "Sair", destroy_user_session_path, method: :delete, class: 'navbar-link'
              - else
                = link_to "Entrar", new_user_session_path, class: 'navbar-link'
