<%= form_for :comment, :url =>  proposal_comments_path(proposal.id) do |f| %>
  <div class="row">
      <div class="col-md-1">
          <%=image_tag current_user.email %>
      </div>
      <div class="col-md-10">
        <%=f.text_area :body, placeholder: "Write a comment..."%>
      </div>
      <div class="col-md-1">
        <%=f.submit "<i class='fa fa-check'></i>",  :class=>"btn btn-success pull-right yellow-btn" %>
      </div>
  </div>
<% end %>
